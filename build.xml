<project name="MataPack Installer" default="pack">
	<target name="unpack-gson">
		<unzip src="lib/gson.jar" dest="bin" />
	</target>
	
	<target name="pack" depends="unpack-gson">
		<jar destfile="matapack.jar" manifest="manifest.txt">
			<fileset dir="bin" />
			<fileset dir="." includes="res/**" />
		</jar>
	</target>
</project>